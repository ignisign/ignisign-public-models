{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": false,

    "skipLibCheck": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",

    "composite": true,

    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": false,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "**/*.d.ts",
    "dist/**/*"
  ]
}